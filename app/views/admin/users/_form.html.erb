<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", object: @user%>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Họ tên" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Nhập lại mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "button-background" %>
  </div>
<% end %>
