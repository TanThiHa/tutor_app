<% provide :title, "Danh sách gia sư" %>
<h1 class="tns-title">Danh sách gia sư</h1>
<hr>
<div class="row">
  <%= render "search" %>
</div>
<div class="row">
  <% if params[:search] %>
    <div class="col-md-12">
      <p><i>Có <%= @tutors.count %> gia sư
        <%= params[:search][:address] != "" ? "ở #{params[:search][:address]}" : "" %>
        <%= params[:search][:gender] != "" ? "- #{params[:search][:gender]}" : "" %>
        <%= params[:search][:subject] != "" ? "- #{Subject.find(params[:search][:subject]).name}" : "" %>
        <%= params[:search][:literacy] != "" ? "- #{params[:search][:literacy]}" : "" %>
      </i></p><br>
    </div>
  <% end %>
</div>
<div class="row">
  <%= render @tutors %>
</div>
