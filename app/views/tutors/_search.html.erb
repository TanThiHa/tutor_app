<%= form_for(:search, url: tutors_path, :html => { :method => "GET" }) do |f| %>
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-3 form-group">
        <%= f.select(:address, select_address_tutor,
          {:include_blank => "Địa chỉ"}, {class: "form-control"}) %>
      </div>

      <div class="col-md-3 form-group">
        <%= f.select(:gender, [["Nam","Nam"],["Nữ","Nữ"]],
          {:include_blank => "Giới tính"}, {class: "form-control"}) %>
      </div>

      <div class="col-md-3 form-group">
        <%= f.select(:subject, select_subject,
          {:include_blank => "Môn dạy"}, {class: "form-control"}) %>
      </div>

      <div class="col-md-3 form-group">
        <%= f.select(:literacy, options_for_tutor,
          {:include_blank => "Trình độ"}, {class: "form-control"}) %>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="col-md-12 form-group">
      <%= f.submit "Tìm kiếm",class: "button-background" %>
    </div>
  </div>
<% end %>

